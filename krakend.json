{
  "version": 3,
  "name": "Teamup Krakend API Gateway",
  "port": 8888,
  "cache_ttl": "300s",
  "timeout": "3000ms",

  "endpoints": [
    {
      "endpoint": "/user/{rest}",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/api/{rest}",
          "host": ["http://user-service-svc:8081"]
        }
      ]
    },
    {
      "endpoint": "/auth/{rest}",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/{rest}",
          "host": ["http://auth-service-svc:8082"]
        }
      ]
    },
    {
      "endpoint": "/auth/login/google",
      "method": "GET",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/login/google",
          "host": ["http://auth-service-svc:8082"],
          "method": "GET"
        }
      ]
    },
    {
      "endpoint": "/application/{rest}",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/{rest}",
          "host": ["http://app-service-svc:3001"]
        }
      ]
    },
    {
      "endpoint": "/group",
      "input_headers": [
        "X-Member-ID",
        "Authorization",
        "Content-Type",
        "Cookie"
      ],
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/group",
          "host": ["http://app-service-svc:3001"],
          "headers_to_pass": [
            "X-Member-ID",
            "Authorization",
            "Content-Type",
            "Cookie"
          ]
        }
      ]
    },
    {
      "endpoint": "/group/{rest}",
      "input_headers": [
        "X-Member-ID",
        "Authorization",
        "Content-Type",
        "Cookie"
      ],
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/group/{rest}",
          "host": ["http://app-service-svc:3001"],
          "headers_to_pass": [
            "X-Member-ID",
            "Authorization",
            "Content-Type",
            "Cookie"
          ]
        }
      ]
    },
    {
      "endpoint": "/bulletin",
      "input_headers": [
        "X-Member-ID",
        "Authorization",
        "Content-Type",
        "Cookie"
      ],
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/bulletin",
          "host": ["http://app-service-svc:3001"],
          "headers_to_pass": [
            "X-Member-ID",
            "Authorization",
            "Content-Type",
            "Cookie"
          ]
        }
      ]
    },
    {
      "endpoint": "/bulletin/{rest}",
      "input_headers": [
        "X-Member-ID",
        "Authorization",
        "Content-Type",
        "Cookie"
      ],
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/bulletin/{rest}",
          "host": ["http://app-service-svc:3001"],
          "headers_to_pass": [
            "X-Member-ID",
            "Authorization",
            "Content-Type",
            "Cookie"
          ]
        }
      ]
    },
    {
      "endpoint": "/member",
      "input_headers": [
        "X-Member-ID",
        "Authorization",
        "Content-Type",
        "Cookie"
      ],
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/member",
          "host": ["http://app-service-svc:3001"],
          "headers_to_pass": [
            "X-Member-ID",
            "Authorization",
            "Content-Type",
            "Cookie"
          ]
        }
      ]
    },
    {
      "endpoint": "/member/{rest}",
      "input_headers": [
        "X-Member-ID",
        "Authorization",
        "Content-Type",
        "Cookie"
      ],
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/member/{rest}",
          "host": ["http://app-service-svc:3001"],
          "headers_to_pass": [
            "X-Member-ID",
            "Authorization",
            "Content-Type",
            "Cookie"
          ]
        }
      ]
    },
    {
      "endpoint": "/search/graphql",
      "method": "POST",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/graphql",
          "host": ["http://search-service-svc:4000"],
          "method": "POST"
        }
      ]
    }
  ],

  "extra_config": {
    "github_com/devopsfaith/krakend-cors": {
      "allow_origins": ["http://localhost:3000", "http://localhost:3001"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "allow_headers": [
        "Authorization",
        "Content-Type",
        "Accept",
        "Origin",
        "X-Member-ID",
        "x-member-id",
        "X-Requested-With"
      ],
      "expose_headers": ["Content-Length", "Content-Type"],
      "max_age": "12h",
      "allow_credentials": true
    },
    "github_com/devopsfaith/krakend-http-server": {
      "read_timeout": "10s",
      "write_timeout": "10s",
      "idle_timeout": "60s"
    },
    "github_com/devopsfaith/krakend/proxy": {
      "sequential": false
    }
  }
}
